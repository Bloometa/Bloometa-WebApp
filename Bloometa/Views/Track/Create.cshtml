@model Bloometa.Models.TrackViewModels.CreateViewModel
@{
    ViewData["Title"] = "Start Tracking";
}

<div class="row">
    <h2>Create</h2>
    <h4>Search or Start Tracking</h4>
    <p>
        If the user you search is in our tracking database, you'll be taken to the results.
        If not, we'll grab the latest data and start tracking every day.
    </p>
    @if (!String.IsNullOrEmpty((string)ViewData["AccResponse"]))
    {
        <div class="text-danger">@ViewData["AccResponse"]</div>
    }

    <form asp-controller="Track" asp-action="Create" method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Network" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Network" class="form-control">
                    @foreach (var Item in (List<string>)ViewData["NetworkOptions"])
                    {
                        <option value="@Item">@Item</option>
                    }
                </select>
                <span asp-validation-for="Network" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Track / Search</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}